@model ParkNet.Pages.My.ParkRegisters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParkRegister[0].EntryTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkRegister[0].ExitTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkRegister[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkRegister[0].Spot)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ParkRegister) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EntryTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExitTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spot.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |

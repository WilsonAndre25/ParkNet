@model ParkNet.Pages.My.ParkingSpots.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParkingSpot[0].VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingSpot[0].Booking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingSpot[0].Busy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingSpot[0].Floor)
            </th>
            <th></th>
        </tr>
